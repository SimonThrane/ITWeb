extends layout

block content
  .row.banner
    .col-12
      h2.text-center Tilføj øvelse
  .row
    .offset-md-4.col-md-4
      form(action="/exercises", method="post", role="form")
        .form-group
          label(for="name") Navn
          input#name.form-control(name="name")
        .form-group
            label(for="description") Beskrivelse
            input#name.form-control(name="description")
        .form-group
            label(for="isRepetition") Repitionsøvelse
            input#name.form-control(name="isRepetition", type="checkbox")
        .form-group
            label(for="set") Sæt
            input#name.form-control(name="set")
        .form-group
            label(for="reps") Repetitioner
            input#name.form-control(name="reps")
        .form-group
            label(for="time") Tid i sekunder
            input#name.form-control(name="time")
        button.btn.btn-primary.float-right Tilføj øvelse